<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/sapp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Air Conditioner"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sapp_nstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:text="Pending"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sapp_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sapp_name"
            android:layout_margin="2dp"
            android:text="Mode set to: ON"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sapp_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sapp_mode"
            android:layout_margin="2dp"
            android:text="Schedule at: 8/8/2016 12:57AM"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sapp_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sapp_dt"
            android:layout_margin="2dp"
            android:text="Timeout: 30mins"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sapp_dt"
            android:background="#fff"
            android:src="@drawable/ic_remove_circle_black_18px" />

    </RelativeLayout>

</android.support.v7.widget.CardView>