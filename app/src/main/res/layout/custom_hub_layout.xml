<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff">

        <Switch
            android:id="@+id/a_switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Disconnected" />

        <TextView
            android:id="@+id/a_name_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_switch1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="AIR CONDITIONER - On"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/a_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_name_connected"
            android:layout_centerHorizontal="true"
            android:src="@drawable/agent_01" />


    </RelativeLayout>

</android.support.v7.widget.CardView>